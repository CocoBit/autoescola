@model IEnumerable<AutoEscola.Models.Ocorrencia>
@{
    <link href="@Url.Content("~/Content/table.css")" rel="stylesheet" type="text/css" />
}
<br />
<h1>
    Ocorrências do aluno</h1>
<table>
    <tr>
        <th>
            Data
        </th>
        <th>
            Descricao
        </th>
    </tr>
    @{
        int contador = 0;
        foreach (var item in Model)
        {
            if (contador % 2 == 0)
            {
        <tr class="form_row">
            <td>
                @item.DataCadastro
            </td>
            <td>
                @item.Descricao
            </td>
        </tr>
            }
            else
            {
        <tr>
            <td>
                @item.DataCadastro
            </td>
            <td>
                @item.Descricao
            </td>
        </tr>
            }
            contador++;
        }
    }
</table>
