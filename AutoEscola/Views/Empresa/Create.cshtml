@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Title = "Create";
}
@model AutoEscola.Models.Empresa
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            <legend>Empresa</legend>
            @Html.Partial("~/Views/Empresa/_ViewEmpresa.cshtml", Model)
            @Html.Partial("~/Views/_ViewEndereco.cshtml", Model.EnderecoEmpresa)
            @Html.Partial("~/Views/_ViewContato.cshtml", Model.ContatoEmpresa)
            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    </div>
}