    <script src="../../Scripts/kwicks-1.5.1.pack.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.kwicks').kwicks({
                max: 346,
                spacing: 0,
                sticky: true,
                defaultKwick: 0,
                event: 'mouseover'
            });
        });
    </script>
